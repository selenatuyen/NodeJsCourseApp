extends layouts/main-layout.pug 

block styles
    link(rel="stylesheet", href="/css/product.css")

block content
    main
        if prods.length > 0
            .grid
                each product in prods
                    article.card.product-item
                        header.card__header
                            h1.product__title #{product.title}
                        div.card__image
                            img(src="https://thejkreview.files.wordpress.com/2013/01/catcher-in-the-rye.jpg", alt="a book",style="max-width:50%")
                        div.card__content
                            h2.product__price $19.99
                            p.product__description A very intersting book.</p>
                        .card__actions
                            button.btn Add to Cart
        else
            h1 No Products